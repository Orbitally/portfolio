---
const { title, subtitle, date, image } = Astro.props;
---

<div class="item">
  <div class="text">
    <p class="title">{title}</p>
    <p class="subtitle">{subtitle}</p>
    <p class="date">{date}</p>
  </div>
  <img src={image} alt="" />
</div>

<style>
  .item {
    width: 200px;
    height: 200px;
    overflow: hidden;
    border-radius: 10px;
    position: relative;
  }
  p {
    color: black;
  }
  .text {
    position: absolute;
    z-index: 1;
    padding: 10px;
    bottom: 0;
  }

  .title {
    font-size: 20px;
    font-weight: bold;
    margin: 0;
  }
  .subtitle {
    font-size: 16px;
    margin: 0;
  }
  .date {
    font-size: 12px;
    margin: 0;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: relative;
  }
</style>
