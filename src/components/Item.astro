---
const { title, subtitle, date, image } = Astro.props;

const lowerTitle = title.toLowerCase().replace(/ /g, '-');
---

<a class="item" href=`/projects/${lowerTitle}`>
  <div class="text">
    <p class="title">{title}</p>
    <p class="subtitle">{subtitle}</p>
    <p class="date">{date}</p>
  </div>
  <img src={image} alt="" />
</a>

<style>
  .item {
    width: 200px;
    height: 200px;
    overflow: hidden;
    border-radius: 10px;
    position: relative;
    filter: grayscale(100%);
    transition-duration: 0.4s;
  }
  .item:hover {
    filter: none;
    cursor: pointer;
    transition-duration: 0.4s;
  }
  p {
    color: white;
  }
  .text {
    position: absolute;
    z-index: 1;
    padding: 10px;
    bottom: 0;
  }

  .title {
    font-size: 20px;
    font-weight: bold;
    margin: 0;
  }
  .subtitle {
    font-size: 16px;
    margin: 0;
  }
  .date {
    font-size: 12px;
    margin: 0;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: relative;
    transition-duration: 0.4s;
  }
  img:hover {
    height: 105%;
    width: 105%;
    transition-duration: 0.4s;
    scale: 105%;
  }
</style>
