---
import { Icon } from 'astro-icon/components';
---

<button class="closeBtn" id="closeFrame"
  ><Icon name="solar:close-circle-bold" /></button
>

<style>
  .closeBtn {
    position: fixed;
    top: 20px;
    left: -5px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    column-gap: 5px;
    width: 100vw;
    z-index: 1;
    background-color: transparent;
    color: white;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    transition-duration: 300ms;
  }
  [data-icon] {
    color: rgb(169, 169, 169);
    font-size: 42px;
    opacity: 0.6;
    transition-duration: 200ms;
  }
  [data-icon]:hover {
    opacity: 1;
    transition-duration: 200ms;
  }
</style>
