<style>
  .closeBtn {
    position: fixed;
    bottom: 0px;
    left: -6px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    column-gap: 5px;
    width: 100vw;
    z-index: 1;
    background-color: transparent;
    color: white;
    border: none;
    cursor: pointer;
    transition-duration: 300ms;
  }
  [data-icon] {
