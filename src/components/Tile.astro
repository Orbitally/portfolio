---
import { Image } from 'astro:assets';

const { title, subtitle, date, image, slug } = Astro.props;
---

<a class="tile" href=`/projects/${slug}` target="the-frame" data-astro-reload>
  <div class="text">
    <p class="title">{title}</p>
    <p class="subtitle">{subtitle}</p>
    <p class="date">{date}</p>
  </div>
  <Image
    src=`https:${image}?fm=webp&w=10&h=10&q=5`
    class="blurry-load"
    data-large=`https:${image}?fm=webp&w=640&h=360&q=20`
    alt=""
    width="100"
    height="100"
  />
</a>

<style>
  .tile {
    width: 200px;
    height: 200px;
    overflow: hidden;
    border-radius: 10px;
    position: relative;
    filter: grayscale(100%);
    transition-duration: 0.4s;
  }
  .tile:hover {
    filter: none;
    cursor: pointer;
    transition-duration: 0.4s;
  }
  p {
    color: white;
  }
  .text {
    position: absolute;
    z-index: 1;
    padding: 10px;
    bottom: 0;
  }

  .title {
    font-size: 20px;
    font-weight: bold;
    margin: 0;
  }
  .subtitle {
    font-size: 16px;
    margin: 0;
  }
  .date {
    font-size: 12px;
    margin: 0;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: relative;
    transition-duration: 0.4s;
  }
  img:hover {
    height: 105%;
    width: 105%;
    transition-duration: 0.4s;
    scale: 105%;
  }
</style>
