---
import { Image } from 'astro:assets';

const { speed, title, date, image, slug } = Astro.props;
---

<a class="tile" href=`/projects/${slug}`>
  <div class="text">
    <p class="title">{title}</p>
    <p class="date">{date}</p>
  </div>
  <Image
    class="tile-image"
    src=`https:${image}?fm=webp&w=840&h=560`
    alt=""
    width="100"
    height="100"
  />
</a>

<style>
  .tile {
    display: block;
    width: 85%;
    height: 50vh;
    overflow: hidden;
    border-radius: 8px;
    filter: grayscale(100%);
    transition: filter 0.4s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    margin-bottom: 30px;
    position: relative;
  }

  .tile:hover {
    filter: none;
    cursor: pointer;
    /* Removed box-shadow transition for smooth mouse following */
  }

  .tile-image {
    width: 100%;
    height: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    object-fit: cover;
    object-position: center;
  }

  /* Add styling for focused tiles from mobile hover */
  .tile.in-focus {
    filter: none;
    transition: filter 0.3s ease;
  }

  p {
    color: white;
  }

  .text {
    position: absolute;
    z-index: 1;
    padding: 10px;
    bottom: 0;
  }

  .title {
    font-size: 20px;
    font-weight: 600;
    margin: 0;
  }

  .subtitle {
    font-size: 16px;
    margin: 0;
  }

  .date {
    font-size: 12px;
    margin: 0;
  }
</style>
