---
import { Image } from 'astro:assets';

const { title, date, image, slug } = Astro.props;
---

<a class="tile" href=`/projects/${slug}`>
  <div class="text">
    <p class="title">{title}</p>
    <p class="date">{date}</p>
  </div>
  <Image
    src=`https:${image}?fm=webp&w=10&h=10&q=5`
    class="blurry-load tile-image"
    data-large=`https:${image}?fm=webp&w=840&h=560&q=50`
    alt=""
    width="100"
    height="100"
  />
</a>

<script>
  import SimpleParallax from 'simple-parallax-js/vanilla';

  const container = document.querySelector('.split-right');

  const image = document.getElementsByClassName('tile-image');
  new SimpleParallax(image, {
    scale: 1.4,
    delay: 1.6,
    orientation: 'up',
    customContainer: container,
  });
</script>

<style>
  .tile {
    display: block;
    width: 85%;
    height: 50vh;
    overflow: hidden;
    border-radius: 8px;
    position: relative;
    filter: grayscale(100%);
    transition-duration: 0.4s;
    border: 4px solid var(--lightgrey);
  }
  .tile:hover {
    filter: none;
    cursor: pointer;
    border: 4px solid var(--darkgrey);
    transition-duration: 0.4s;
  }
  p {
    color: white;
  }
  .text {
    position: absolute;
    z-index: 1;
    padding: 10px;
    bottom: 0;
  }

  .title {
    font-size: 20px;
    font-weight: 600;
    margin: 0;
  }
  .subtitle {
    font-size: 16px;
    margin: 0;
  }
  .date {
    font-size: 12px;
    margin: 0;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: relative;
    transition-duration: 0.4s;
  }
  a:hover > img {
    transition-duration: 0.3s;
    scale: 105%;
  }
</style>
