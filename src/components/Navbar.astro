---
import { Image } from 'astro:assets';
---

<div class="navbar">
  <div class="leftside">
    <Image src="/favicon.ico" alt="descriptive text" width="30" height="30" />
    <a data-astro-reload id="funtext" href="/">Jacob Kreindler</a>
  </div>
  <div class="rightside">
    <a href="/projects">Projects</a>
    <a href="/about">About</a>
    <!-- <a href="/resume">Resume</a> -->
    <a href="mailto:hello@kreindler.ca">Contact</a>
  </div>
</div>

<style>
  @media screen and (max-width: 630px) {
    .navbar {
      flex-direction: column !important;
      align-items: center;
      padding-top: 3vh !important;
    }
    .navbar .leftside {
      margin-left: 0px !important;
    }
    .navbar .rightside {
      margin-right: 0px !important;
    }
  }

  .navbar {
    display: flex;
    position: fixed;
    top: 0;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100vw;
    z-index: 5;
    font-size: 18px;
    line-height: normal;
    padding-top: 5vh;
    padding-bottom: 0.5vh;

    /* Blur effect */
    padding-bottom: 50px !important;
    backdrop-filter: blur(5px);
    -webkit-mask-image: linear-gradient(to bottom, black 70%, transparent 100%);
    mask-image: linear-gradient(to bottom, black 70%, transparent 100%);
  }
  .navbar a {
    text-decoration: none;
    color: black;
    padding: 0.5rem;
    transition-duration: 500ms;
    font-size: 21px;
  }
  .navbar a:hover {
    color: black;
    -webkit-text-fill-color: white;
    -webkit-text-stroke: 1px black;
    font-size: 21px;
    transition-duration: 500ms;
  }
  .navbar img {
    filter: grayscale(100%);
    transition-duration: 500ms;
  }
  .navbar img:hover {
    filter: grayscale(0%);
    transition-duration: 500ms;
  }
  @media (hover: none) {
    .navbar img {
      filter: none !important;
    }
  }
  .navbar .leftside {
    float: left;
    margin-left: 75px;
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .navbar .rightside {
    float: right;
    margin-right: 75px;
  }
  #funtext {
    color: black;
    -webkit-text-fill-color: white;
    -webkit-text-stroke: 1px black;
  }
  #funtext:hover {
    color: black;
    -webkit-text-fill-color: black;
    -webkit-text-stroke: 0px;
  }
</style>
