---
//@ts-nocheck

import { Image } from 'astro:assets';

import { contentfulClient } from '../../lib/contentful';
import type { Project } from '../../lib/contentful';

let upperContent;

const { slug } = Astro.params;

// Get just the title, subtitle, date, and image of the project to be loaded first
try {
  const topSection = await contentfulClient.getEntries<Project>({
    content_type: 'project',
    'fields.slug': slug,
    select: 'sys.id,fields.title,fields.subtitle,fields.date,fields.image',
  });

  const { title, subtitle, date, image } = topSection.items[0].fields;

  upperContent = {
    title,
    subtitle,
    date: new Date(date).toLocaleDateString(),
    image: image.fields.file.url,
  };
} catch (error) {
  console.error(error);
}
---

<div class="header">
  <!-- Render the top header image -->
  <Image
    class="top-image"
    alt=""
    width={100}
    height={100}
    loading="eager"
    src=`${upperContent?.image}?fm=webp&w=1920&h=1080&q=65&fit=fill`
    transition:name={`project-${slug}`}
  />
  <div class="headerText">
    <h1>{upperContent?.title}</h1>
    <h2>{upperContent?.subtitle}</h2>
    <!-- if the date is returned as "invalid date don't show it" -->
    <h3>{upperContent?.date !== 'Invalid Date' && upperContent?.date}</h3>
  </div>
</div>

<style>
  .header {
    margin: 0;
    height: 100vh;
    position: relative; /* Add this to create a positioning context */
  }

  .header .headerText {
    display: flex;
    vertical-align: bottom;
    flex-direction: column;
    z-index: 1;
    color: white;
    margin: 35px;
    position: absolute; /* Add this to position the text over the image */
    bottom: 0; /* Position at the bottom of the header */
    left: 0; /* Align to the left */
  }
  .top-image {
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    z-index: 0;
    filter: brightness(0.9);
  }

  h1 {
    margin-bottom: 5px;
    font-weight: bolder;
  }
  h2 {
    margin: 0;
    font-weight: 400;
  }
  h3 {
    font-weight: bold;
  }
</style>
