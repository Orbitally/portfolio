---
import Layout from '../layouts/Layout.astro';
import ItemBox from '../components/Tile.astro';

import { contentfulClient } from '../lib/contentful';
import type { Tile } from '../lib/contentful';

const entires = await contentfulClient.getEntries<Tile>({
  content_type: 'tile',
});

const tiles = entires.items.map((item) => {
  const { title, subtitle, date, image, slug } = item.fields;
  return { title, subtitle, date, image, slug };
});
