---
import Layout from '../layouts/Layout.astro';
import ItemBox from '../components/Item.astro';
---

<Layout>
  <main>
    <div class="navbar">
      <div class="leftside">
        <a href="/">Jacob Kreindler</a>
      </div>
      <div class="rightside">
        <a href="/about">About</a>
        <a href="/projects">Projects</a>
        <a href="/resume">Resume</a>
        <a href="/contact">Contact</a>
      </div>
    </div>
    <div class="content">
      <div class="col-1">
        <ItemBox
          title="Thing"
          subtitle="Stuff"
          date="1/2/3"
          image="https://source.unsplash.com/random"
        />
        <ItemBox
          title="Thing"
          subtitle="Stuff"
          date="1/2/3"
          image="https://source.unsplash.com/random"
        />
      </div>
      <div class="col-2">
        <ItemBox
          title="Thing"
          subtitle="Stuff"
          date="1/2/3"
          image="https://source.unsplash.com/random"
        />
        <ItemBox
          title="Thing"
          subtitle="Stuff"
          date="1/2/3"
          image="https://source.unsplash.com/random"
        />
      </div>
      <div class="col-3">
        <ItemBox
          title="Thing"
          subtitle="Stuff"
          date="1/2/3"
          image="https://source.unsplash.com/random"
        />
        <ItemBox
          title="Thing"
          subtitle="Stuff"
          date="1/2/3"
          image="https://source.unsplash.com/random"
        />
      </div>
      <div class="col-4">
        <ItemBox
          title="Thing"
          subtitle="Stuff"
          date="1/2/3"
          image="https://source.unsplash.com/random"
        />
        <ItemBox
          title="Thing"
          subtitle="Stuff"
          date="1/2/3"
          image="https://source.unsplash.com/random"
        />
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    padding: 2rem;
    color: white;
    font-size: 20px;
    line-height: 1.6;
    display: grid;
    grid-template-rows: auto;
    align-items: center;
    justify-content: center;
  }
  .navbar a {
    text-decoration: none;
    color: black;
    padding: 0.5rem;
    transition-duration: 500ms;
  }
  .navbar a:hover {
    text-decoration: underline;
    transition-duration: 500ms;
  }
  .navbar .leftside {
    float: left;
    margin-left: 20px;
  }
  .navbar .rightside {
    float: right;
    margin-right: 20px;
  }
  .content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    justify-items: center;
    margin-top: 5vh;
    width: 90vw;
    height: auto;
  }

  /* apply to all classes that start with 'col-' */
  [class^='col-'] {
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 20px;
  }
</style>
