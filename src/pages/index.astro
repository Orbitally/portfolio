  }
  .navbar {
    z-index: 5;
    background-color: white;
    padding-top: 5vh;
  }
  .navbar a {
    text-decoration: transparent;
    color: black;
    padding: 0.5rem;
    transition-duration: 500ms;
  }
  .navbar a:hover {
    text-decoration: underline;
    transition-duration: 500ms;
  }
  .navbar .leftside {
    float: left;
    margin-left: 20px;
  }
  .navbar .rightside {
