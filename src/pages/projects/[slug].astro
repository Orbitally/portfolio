---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import ProjectHeader from '../../components/project/ProjectHeader.astro';
import ProjectContent from '../../components/project/ProjectContent.astro';
---

<Layout>
  <Navbar />
  <ProjectHeader />
  <ProjectContent />
</Layout>

<style>
  .top-image {
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    z-index: 0;
    position: absolute;
    top: 0;
    left: 0;
    filter: brightness(0.9);
  }

  .gallery-image {
    width: 100%;
    height: auto;
    margin: 5px;
    border-radius: 3px;
  }
  center {
    display: flex;
    justify-content: center;
  }
  article {
    display: block;
    position: absolute;
    top: 100vh;
    align-items: center;
    margin: 5px;
    padding: 10px;
  }
  h1 {
    margin-bottom: 5px;
    font-weight: bolder;
  }
  h2 {
    margin: 0;
    font-weight: 400;
  }
  h3 {
    font-weight: bold;
  }
  p {
    text-align: justify;
  }

  .headerText {
    display: flex;
    position: absolute;
    flex-direction: column;
    z-index: 1;
    color: white;
    bottom: 0;
    margin: 35px;
  }
</style>
