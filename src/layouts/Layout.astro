      rel="icon"
      type="image/png"
      href="https://jacob.kreindler.ca/favicons/favicon-196x196.png"
      sizes="196x196"
    />
    <link
      rel="icon"
      type="image/png"
      href="https://jacob.kreindler.ca/favicons/favicon-96x96.png"
      sizes="96x96"
    />
    <link
      rel="icon"
      type="image/png"
      href="https://jacob.kreindler.ca/favicons/favicon-32x32.png"
      sizes="32x32"
    />
    <link
      rel="icon"
      type="image/png"
      href="https://jacob.kreindler.ca/favicons/favicon-16x16.png"
      sizes="16x16"
    />
