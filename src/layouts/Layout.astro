---
import SpeedInsights from '@vercel/speed-insights/astro';
import { ClientRouter } from 'astro:transitions';

import Navbar from '../components/Navbar.astro';

// Supports weights 400-800
import '@fontsource-variable/baloo-2';

import '../styles/blurry-load.css';
---

<!doctype html>
<html lang="en" transition:name="root" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Jacob Kreindler's Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Facebook Meta Tags -->
    <meta property="og:title" content="Jacob Kreindler" />
    <meta property="og:description" content="Jacob Kreindler's portfolio" />
    <meta
      property="og:image"
      content="https://jacob.kreindler.ca/images/Moi.png"
    />
    <meta property="og:url" content="https://jacob.kreindler.ca/" />
    <meta property="og:site_name" content="Jacob Kreindler" />
    <meta property="og:type" content="website" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Jacob Kreindler" />
    <meta name="twitter:description" content="Jacob Kreindler's portfolio" />
    <meta
      name="twitter:image"
      content="https://jacob.kreindler.ca/images/Moi.png"
    />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="57x57"
      href="https://jacob.kreindler.ca/favicons/apple-touch-icon-57x57.png"
    />
