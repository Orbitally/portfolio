      sizes="72x72"
      href="https://jacob.kreindler.ca/favicons/apple-touch-icon-72x72.png"
    />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="144x144"
      href="https://jacob.kreindler.ca/favicons/apple-touch-icon-144x144.png"
    />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="60x60"
      href="https://jacob.kreindler.ca/favicons/apple-touch-icon-60x60.png"
    />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="120x120"
      href="https://jacob.kreindler.ca/favicons/apple-touch-icon-120x120.png"
    />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="76x76"
      href="https://jacob.kreindler.ca/favicons/apple-touch-icon-76x76.png"
    />
    <link
      rel="apple-touch-icon-precomposed"
      sizes="152x152"
      href="https://jacob.kreindler.ca/favicons/apple-touch-icon-152x152.png"
    />
    <link
      rel="icon"
      type="image/png"
      href="https://jacob.kreindler.ca/favicons/favicon-196x196.png"
      sizes="196x196"
    />
    <link
      rel="icon"
      type="image/png"
      href="https://jacob.kreindler.ca/favicons/favicon-96x96.png"
      sizes="96x96"
    />
    <link
      rel="icon"
      type="image/png"
      href="https://jacob.kreindler.ca/favicons/favicon-32x32.png"
      sizes="32x32"
    />
    <link
      rel="icon"
      type="image/png"
      href="https://jacob.kreindler.ca/favicons/favicon-16x16.png"
      sizes="16x16"
    />
    <link
      rel="icon"
      type="image/png"
      href="https://jacob.kreindler.ca/favicons/favicon-128.png"
      sizes="128x128"
    />
    <meta name="application-name" content="Jacob Kreindler" />
    <meta name="msapplication-TileColor" content="#FFFFFF" />
    <meta
      name="msapplication-TileImage"
      content="https://jacob.kreindler.ca/favicons/mstile-144x144.png"
    />
    <meta
      name="msapplication-square70x70logo"
      content="https://jacob.kreindler.ca/favicons/mstile-70x70.png"
    />
    <meta
      name="msapplication-square150x150logo"
      content="https://jacob.kreindler.ca/favicons/mstile-150x150.png"
    />
    <meta
      name="msapplication-wide310x150logo"
      content="https://jacob.kreindler.ca/favicons/mstile-310x150.png"
    />
    <meta
      name="msapplication-square310x310logo"
      content="https://jacob.kreindler.ca/favicons/favicons/mstile-310x310.png"
    />

    <title>Jacob Kreindler</title>

    <script>
      import { BlurryImageLoad } from '../js/blurry-load.js';
      const blurryImageLoad = new BlurryImageLoad();
      blurryImageLoad.load();

      document.addEventListener('astro:after-swap', () => {
        blurryImageLoad.load();
      });
      document.addEventListener('newTilesLoaded', () => {
        blurryImageLoad.load();
      });
    </script>
    <SpeedInsights />
    <ClientRouter />
  </head>

  <body>
    <div class="split">
      <div
        class="split-left"
        transition:name="split-left"
        transition:animate="none"
      >
        <Navbar />
      </div>
      <div class="split-right" transition:animate="slide">
        <slot />
      </div>
    </div>

    <style is:global>
      :root {
        --lightgrey: #cdcdcd;
        --darkgrey: #505050;
      }
      html {
        font-family: 'Baloo 2 Variable', sans-serif;
        font-weight: 400;
        font-size: 18px;
        overflow: hidden;
      }

      body {
        margin: 0;
        --sb-track-color: #ffffff;
        --sb-thumb-color: #5c7081;
        --sb-size: 10px;
        min-height: 100vh;
        position: relative;
      }

      body::-webkit-scrollbar {
        width: var(--sb-size);
      }

      body::-webkit-scrollbar-track {
        background: transparent;
      }

      body::-webkit-scrollbar-thumb {
        background: var(--sb-thumb-color);
        border-radius: 5px;
      }

      @supports not selector(::-webkit-scrollbar) {
        body {
          scrollbar-color: var(--sb-thumb-color) var(--sb-track-color);
        }
      }

      @keyframes slide-left {
        0% {
          transform: translateX(0);
        }
        100% {
          transform: translateX(-100%);
        }
      }
    </style>
    <!-- Non-global styles (for the splits) -->
    <style>
      .split {
        display: flex;
        flex-direction: row;
        overflow-y: hidden;
      }

      .split-left {
        display: flex;
        flex-direction: column;
        width: 10vw;
        height: 100vh;
        border-right: var(--lightgrey) solid 2.5px;
        overflow-y: scroll;
        z-index: 10;
        scroll-behavior: smooth;
      }

      .split-right {
        display: flex;
        flex-direction: column;
        width: 90vw;
        height: 100vh;
        padding-bottom: 0;
        overflow-y: scroll;
        overflow-x: hidden;
      }
    </style>
  </body>
</html>
